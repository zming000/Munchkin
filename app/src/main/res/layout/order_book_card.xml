<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/orderBookCard_bookImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/orderBookCard_bookIdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book ID"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/orderBookCard_bookImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderBookCard_bookTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/orderBookCard_bookImage"
        app:layout_constraintTop_toBottomOf="@+id/orderBookCard_bookIdTV" />

    <TextView
        android:id="@+id/orderBookCard_bookPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Price"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/orderBookCard_bookImage"
        app:layout_constraintTop_toBottomOf="@+id/orderBookCard_bookTitleTV" />

    <TextView
        android:id="@+id/orderBookCard_bookCollectionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/orderBookCard_bookImage"
        app:layout_constraintTop_toBottomOf="@+id/orderBookCard_bookPriceTV" />

    <TextView
        android:id="@+id/orderBookCard_totalPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM "
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>